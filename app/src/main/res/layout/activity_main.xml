<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.example.raoyinchen.minilinkedin.MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:id="@+id/user_name_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/user_picture">

                <TextView
                    android:id = "@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XI Wang"
                    android:textSize="23sp"/>

                <ImageButton
                    android:id="@+id/edit_basic_info"
                    android:layout_width="@dimen/action_button_size"
                    android:layout_height="@dimen/action_button_size"
                    android:layout_margin="3dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_mode_edit_black_18px"
                    android:background="?attr/selectableItemBackground"/>
            </LinearLayout>



            <TextView
                android:id = "@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xixiwang@scu.edu"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/user_name_layout"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/user_picture"
                />




            <ImageView
                android:id="@+id/user_picture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/user_ghost"
               />


        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/education"
                android:layout_weight="1"
                android:textSize="@dimen/action_text_big"
                android:textAllCaps="true"/>

            <ImageButton
                android:id="@+id/add_education_btn"
                android:layout_width="@dimen/action_button_size"
                android:layout_height="@dimen/action_button_size"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_add_black_24px"
                android:background="?attr/selectableItemBackground"/>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/educations_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation = "vertical"
            />






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/experience"
                android:layout_weight="1"
                android:textSize="@dimen/action_text_big"
                android:textAllCaps="true"/>

            <ImageButton
                android:id="@+id/add_experience_btn"
                android:layout_width="@dimen/action_button_size"
                android:layout_height="@dimen/action_button_size"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_add_black_24px"
                android:background="?attr/selectableItemBackground"/>


        </LinearLayout>



        <LinearLayout
            android:id="@+id/experiences_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/projects"
                android:layout_weight="1"
                android:textSize="@dimen/action_text_big"
                android:textAllCaps="true"/>

            <ImageButton
                android:id="@+id/add_project_btn"
                android:layout_width="@dimen/action_button_size"
                android:layout_height="@dimen/action_button_size"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_add_black_24px"
                android:background="?attr/selectableItemBackground"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/projects_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            />

    </LinearLayout>

</ScrollView>
