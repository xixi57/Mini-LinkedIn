<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_medium">

    <EditText
        android:id="@+id/project_edit_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Company"/>

    <EditText
        android:id="@+id/project_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/project_edit_start_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="date"
            android:hint="@string/start_edit_date"

            />

        <EditText
            android:id="@+id/project_edit_end_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="date"
            android:hint="@string/end_edit_date"

            />


    </LinearLayout>

    <EditText
        android:id="@+id/project_edit_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/project_edit_details"/>



</LinearLayout>